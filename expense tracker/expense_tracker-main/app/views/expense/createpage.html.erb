<div style="width:100%; height:100%; display:flex; justify-content:center; margin-top:12%; ">
    <div style="border-style:solid;padding:50px">
<h1>Add Expense</h1>
<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>
<%= form_with url: "/createexp" do |form|%>


<div>
    <%= form.hidden_field :user_id ,value: @tid.id %>
</div>

<div>
<%= form.label :"Invoice Id"%>
<%= form.number_field :invoice_id %>
</div>

<div>
    <%= form.label :Date%>
    <%= form.text_field :date%>
</div>

<div>
<%= form.label :Description %>
<%= form.text_field :desc %>
</div>

<div>
<%= form.label :Amount %>
<%= form.number_field :amount %>
</div>


<div>
<%= form.label :Document %>
<%= form.file_field :doc %>
</div>

<%= form.submit "Add"%>
<%= link_to "Back",:back%>
<%= link_to "Log In","/signin" %>
<%end%>
</div>